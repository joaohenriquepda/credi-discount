<br/>
<h1><%= @user.name %>'s Profile</h1>



<div class="row">
  <div class="col-md-6">
    <h2>Basic Information:</h2> 
    <% if @user.address %>
      <p><strong>Name: </strong><%= @user.name %></p>
      <p>CPF: <%= @user.cpf %></p>
      <p>Email: <%= @user.email %></p>
    <% else %>
      <p>No address provided</p>
    <% end %>
  </div>

  <div class="col-md-6">
<h2>Address:</h2>
    <% if @user.address %>
      <p>Street: <%= @user.address.street %></p>
      <p>City: <%= @user.address.city %></p>
      <p>State: <%= @user.address.state %></p>
      <p>Zip Code: <%= @user.address.zip_code %></p>
    <% else %>
      <p>No address provided</p>
    <% end %>
  </div>
</div>


<h2>Contacts:</h2>
<% if @user.contacts.any? %>
  <ul>
    <% @user.contacts.each do |contact| %>
      <li>Name: <%= contact.name %>, Phone: <%= contact.phone %>, Type: <%= contact.contact_type %></li>
    <% end %>
  </ul>
<% else %>
  <p>No contacts provided</p>
<% end %>



<%= link_to "Back", :back %>