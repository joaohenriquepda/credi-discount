<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">

    <div class="row">
        <div class="col-md-4">
          <%= f.label :name %><br />
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="col-md-3">
          <%= f.label :phone %><br />
          <%= f.text_field :phone, class: 'form-control',  onChange: "keyup()" %>
        </div>       
        <div class="col-md-3">
          <%= f.label :type %><br />
          <%= f.select :contact_type, Contact.contact_types.keys, class: 'form-control'  %>
        </div>
          <div class="col-md-2">
            <button type="button" class="btn btn-danger" data-action="nested-form#remove">X</button>
          </div>
    </div>

  <%= f.hidden_field :_destroy %>
</div>